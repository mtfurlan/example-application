/* https://github.com/u-blox/ubxlib/blob/master/port/platform/zephyr/runner/boards/nrf5340dk_nrf5340_cpuapp.overlay */
&pinctrl {
	uart3_default: uart3_default {
		group1 {
			psels = <NRF_PSEL(UART_TX, 1, 10)>,
                <NRF_PSEL(UART_RX, 1, 11)>,
				<NRF_PSEL(UART_RTS, 1, 12)>,
				<NRF_PSEL(UART_CTS, 1, 13)>;
		};
	};

	uart3_sleep: uart3_sleep {
		group1 {
			psels = <NRF_PSEL(UART_TX, 1, 10)>,
				<NRF_PSEL(UART_RX, 1, 11)>,
				<NRF_PSEL(UART_RTS, 1, 12)>,
				<NRF_PSEL(UART_CTS, 1, 13)>;
			low-power-enable;
		};
	};

    /*
    default
            psels =
                    <NRF_PSEL(SPIM_MOSI, 0, 26)>,
                    <NRF_PSEL(SPIM_MISO, 0, 25)>,
                    <NRF_PSEL(SPIM_SCK, 0, 27)>;

    lectronics
            psels =
                    <NRF_PSEL(SPIM_MOSI, 0, 20)>,
                    <NRF_PSEL(SPIM_MISO, 0, 31)>,
                    <NRF_PSEL(SPIM_SCK, 0, 19)>;
    */
    spi2_default: spi2_default {
        group1 {
            psels =
                    <NRF_PSEL(SPIM_MOSI, 0, 26)>,
                    <NRF_PSEL(SPIM_MISO, 0, 25)>,
                    <NRF_PSEL(SPIM_SCK, 0, 27)>;
        };
    };

    spi2_sleep: spi2_sleep {
        group1 {
            psels =
                    <NRF_PSEL(SPIM_MOSI, 0, 26)>,
                    <NRF_PSEL(SPIM_MISO, 0, 25)>,
                    <NRF_PSEL(SPIM_SCK, 0, 27)>;
            low-power-enable;
        };
    };

};

&i2c1 {
    status = "okay";
    /* Otherwise board default settings are good. */
};

&uart2 {
    /* Disable UART2 so that we can use SPI2 */
    status = "disabled";
};
&uart0 {
    status = "disabled";
};
&qspi {
    status = "disabled";
};
&spi2 {
    status = "disabled";
};
/ {
	leds {
		led3: led_3 {
            status = "disabled";
		};
	};
};

/* This used to be on 2 but we need to put the SPI there so it has moved to 3. */
&uart3 {
    compatible = "nordic,nrf-uarte";
    current-speed = <115200>;
    status = "okay";
    pinctrl-0 = <&uart3_default>;
    pinctrl-1 = <&uart3_sleep>;
    pinctrl-names = "default", "sleep";
    hw-flow-control;
};

/* Can't use the default SPI pins as they overlap with the flow control pins we use for the UART. */
&spi2 {
    status = "disabled";
};
&spi4 {
    compatible = "nordic,nrf-spim";
    status = "okay";
    cs-gpios = <&gpio1 14 GPIO_ACTIVE_LOW>;
    pinctrl-0 = <&spi2_default>;
    pinctrl-1 = <&spi2_sleep>;
    pinctrl-names = "default", "sleep";
};
